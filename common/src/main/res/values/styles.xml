<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Subtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RatingText" parent="Subtitle">
        <item name="drawableStartCompat">@drawable/ic_star</item>
        <item name="drawableTint">@android:color/holo_orange_light</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="CommonText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommonText.Italic">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RoundedCornersImage">
        <item name="cornerSize">16dp</item>
    </style>
</resources>